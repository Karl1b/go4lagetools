{
  "name": "go4lagetool",
  "displayName": "Go ↔ TypeScript type Converter",
  "description": "VSCode extension for converting Go structs to TypeScript interfaces and vice versa. Part of the go4lage.com toolset.",
  "version": "1.0.1",
  "publisher": "KarlBreuer",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "homepage": "https://go4lage.com",
  "bugs": {
    "url": "https://github.com/Karl1b/go4lagetools/issues"
  },
  "pricing": "Free",
  "activationEvents": [
    "onCommand:go4lagetool.convert"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Karl1b/go4lagetools.git"
  },
  "license": "MIT",
  "keywords": [
    "go",
    "golang",
    "typescript",
    "struct",
    "interface",
    "converter",
    "go4lage",
    "transform"
  ],
  "contributes": {
    "commands": [
      {
        "command": "go4lagetool.convert",
        "title": "Convert Struct ↔ Interface (Go ↔ TS)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "go4lagetool.convert",
          "group": "go4lagetool",
          "when": "config.go4lagetool.showContextMenu"
        }
      ]
    },
    "configuration": [
      {
        "title": "Go4lagetool",
        "properties": {
          "go4lagetool.showContextMenu": {
            "type": "boolean",
            "default": true,
            "description": "Show convert option in editor context menu"
          },
          "go4lagetool.enableJsonTagCheck": {
            "type": "boolean",
            "default": true,
            "description": "Enable checking for missing JSON tags in Go structs before converting to TypeScript. If enabled, missing JSON tags will be added instead of converting to TypeScript when tags are missing."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
